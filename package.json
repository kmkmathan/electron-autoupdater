{
  "name": "electron-updater-example",
  "version": "0.4.5",
  "main": "main.js",
  "description": "electron-updater example project",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "mocha && standard",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app.ico  --win32metadata.CompanyName=\"Heptagon Technologies Pvt.Ltd\" --win32metadata.ProductName=\"Chef on Wheels\" --win32metadata.FileDescription=\"Chef on Wheels\" --appCopyright=\"Copyright Â© 2017 Heptagon Technologies Pvt.Ltd. All rights reserved.\" --win32metadata.ProductVersion=0.0.0.1 --win32metadata.FileVersion=0.0.0.1",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
    "package:sign-exe": "signcode './out/Chef on Wheels-win32-ia32/Chef on Wheels.exe' --cert ~/Chef-on-Wheels.p12 --prompt --name 'Chef-on-Wheels' --url 'http://electron.atom.io'",
    "package:installer": "node ./script/installer.js",
    "package:sign-installer": "signcode './out/windows-installer/Chef-on-Wheels.exe' --cert ~/Chef-on-Wheels.p12 --prompt --name 'Chef-on-Wheels' --url 'http://electron.atom.io'",
    "package:mas": "./script/mas.sh",
    "windows-store": "node ./script/windows-store.js",
    "release": "node ./script/release.js"
  },
  "author": "Matt Haggard",
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^12.3.1"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^1.4.2"
  },
  "build": {
    "appId": "com.github.iffy.electronupdaterexample",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  }
}
